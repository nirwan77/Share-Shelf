generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // url      = env("DATABASE_URL")
}

model User {
  id         String  @id @default(cuid())
  email      String  @unique
  password   String
  isVerified Boolean @default(false)

  money Int @default(0)

  name   String
  avatar String?

  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt
  userBookStatuses UserBookStatus[]
  userBookReviews  UserBookReview[]
  userRatedBy      UserRating[]     @relation("userRatingBy")
  userRatingBy     UserRating[]     @relation("userRatedBy")
  payments         Payment[]
}

model Otp {
  id        String   @id @default(nanoid())
  email     String
  code      String
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model Books {
  id String @id @default(nanoid())

  name        String
  author      String
  description String
  image       String
  price       Int
  releaseDate DateTime

  userBookStatuses UserBookStatus[]
  userBookReviews  UserBookReview[]
  bookGenres       BookGenre[]
}

model BookGenre {
  bookId  String
  genreId String
  book    Books  @relation(fields: [bookId], references: [id], onDelete: Cascade)
  genre   Genre  @relation(fields: [genreId], references: [id], onDelete: Cascade)

  @@id([bookId, genreId])
}

model Genre {
  id    String      @id @default(nanoid())
  name  String      @unique
  books BookGenre[]
}

enum BookStatus {
  READING
  PLAN_TO_READ
  READ
}

model UserBookStatus {
  id     String     @id @default(nanoid())
  status BookStatus

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  bookId String
  book   Books  @relation(fields: [bookId], references: [id], onDelete: Cascade)
}

model UserBookReview {
  id      String @id @default(nanoid())
  rating  Int
  comment String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  bookId String
  book   Books  @relation(fields: [bookId], references: [id], onDelete: Cascade)
}

model UserRating {
  id     String @id @default(nanoid())
  rating Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  ratingUserId String
  ratingUser   User   @relation(fields: [ratingUserId], references: [id], onDelete: Cascade, name: "userRatingBy")
  ratedUserId  String
  ratedUser    User   @relation(fields: [ratedUserId], references: [id], onDelete: Cascade, name: "userRatedBy")
}

model Payment {
  id               String        @id @default(cuid())
  transaction_uuid String        @unique
  product_code     String
  amount           Float
  tax_amount       Float
  total_amount     Float
  status           PaymentStatus @default(PENDING)
  userId           String?
  user             User?         @relation(fields: [userId], references: [id])
  signature        String?
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt

  @@index([userId])
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
}
